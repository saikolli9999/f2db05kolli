extends layout

block content
  h1= title
  - var EngineResults = results;
  div(class="container-fluid")
    div(class="row")
    each item in EngineResults
      - var itm = item;
      div(class="col-sm-2" width="215px") Engine Type:#{item.EngineType}, Cylinders:#{item.Cylinders}, FuelType:#{item.FuelType}, Transmission:#{item.Transmission}
  br
  div(class="container-fluid")
    div(class="row")
    - for(var i=0;i<EngineResults.length;i++) {
        div(class="col-sm-2" width="215px" onClick=`buy(${i+1})`) #{results[i].EngineType}
    -}
  div(id="formDiv" style='display:none;')
    label(id="lblType") Engine Type
    input(id="engType" type='text')
    br
    label(id="lblCyl") Cylinders
    input(id="numCyl" type='number')
    br
    label(id="lblFuel") FuelType
    input(id="fuelTyp" type='text')
    br
    label(id="lblTrns") Transmission
    input(id="trans" type='text')
  script. 
    function buy(indexNum) {
      alert(`You purchased item ${indexNum}`);
    }
    function updateRecord(item) {
      alert(`You purchased item ${item}`);
      document.getElementById("formDiv").style.display="block";
    } 